<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <dependencySets>
    <!-- Include all runtime dependencies. -->
    <dependencySet>
      <outputDirectory>libraries</outputDirectory>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>

  <files>
    <!-- Include license information of third party dependencies (generated by license plugin). -->
    <file>
      <source>${project.build.directory}/THIRD-PARTY</source>
      <outputDirectory>licenses</outputDirectory>
    </file>
    <!-- Include own license file. -->
    <file>
      <source>../LICENSE</source>
      <outputDirectory>licenses</outputDirectory>
    </file>
  </files>

  <fileSets>
    <!-- Include executable init script. -->
    <fileSet>
      <directory>bin</directory>
      <outputDirectory>bin</outputDirectory>
      <fileMode>755</fileMode>
    </fileSet>
    <!-- Include configuration examples. -->
    <fileSet>
      <directory>examples</directory>
      <outputDirectory>examples</outputDirectory>
    </fileSet>
    <!-- Include additional resources such as logging configuration. -->
    <fileSet>
      <directory>resources</directory>
      <outputDirectory>resources</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>